root = true

[*.{kt,kts}]
ktlint_code_style = intellij_idea
ktlint_standard_final-newline = disable
ktlint_standard_no-consecutive-blank-lines = disable
ktlint_standard_no-empty-class-body = disable
ktlint_standard_no-blank-line-before-rbrace = disable
ktlint_standard_no-empty-first-line-in-class-body = disable
ktlint_standard_no-empty-first-line-in-method-block = disable
ktlint_standard_trailing-comma-on-declaration-site = disable